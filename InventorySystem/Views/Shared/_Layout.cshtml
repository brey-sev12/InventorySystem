<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Inventory System</title>

    <meta name="description" content="Inventory System - Manage your products and suppliers efficiently." />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* Layout */
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: #f8f9fa;
        }

        .content-wrapper {
            flex: 1;
            display: flex;
            overflow: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background-color: #0d6efd;
            color: white;
            display: flex;
            flex-direction: column;
            padding-top: 1rem;
            box-shadow: 3px 0 6px rgb(0 0 0 / 0.1);
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.85);
            font-weight: 600;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: background-color 0.3s ease;
            border-radius: 0 25px 25px 0;
            margin: 0 8px 8px 8px;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
            text-decoration: none;
        }

        /* Main content */
        main.container {
            flex: 1;
            background: white;
            padding: 2rem;
            overflow-y: auto;
            box-shadow: 0 0 15px rgb(0 0 0 / 0.05);
            border-radius: 8px;
            margin: 1.5rem;
        }

        /* Navbar Brand */
        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            letter-spacing: 1.2px;
            color: white !important;
        }

        /* Page header */
        .page-header {
            margin-bottom: 1.5rem;
        }

        .page-header h1 {
            font-weight: 700;
            color: #0d6efd;
        }

        /* Footer */
        footer.footer {
            background-color: #0d6efd;
            color: white;
            padding: 1rem 0;
            text-align: center;
            box-shadow: 0 -4px 6px rgb(0 0 0 / 0.1);
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Responsive tweaks */
        @@media (max-width: 767px) {
            .content-wrapper {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                flex-direction: row;
                padding: 0.5rem;
                overflow-x: auto;
            }

            .sidebar .nav-link {
                margin: 0 8px;
                border-radius: 8px;
            }

            main.container {
                margin: 1rem 0.5rem;
                border-radius: 0;
                box-shadow: none;
            }
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary px-3">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <i class="bi bi-box-seam me-2"></i>Inventory System
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar"
            aria-controls="topNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="topNavbar">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")"></a>
                </li>
                <!-- Add more top navbar items if needed -->
            </ul>
        </div>
    </nav>

    <div class="content-wrapper">

        <!-- Sidebar navigation -->
        <nav class="sidebar">
            <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="bi bi-speedometer2"></i> Dashboard</a>
            <a class="nav-link" href="@Url.Action("Index", "Product")"><i class="bi bi-box"></i> Products</a>
            <a class="nav-link" href="@Url.Action("Create", "Product")"><i class="bi bi-plus-circle"></i> Add Product</a>
            <a class="nav-link" href="@Url.Action("Index", "Supplier")"><i class="bi bi-people"></i> Suppliers</a>
            <a class="nav-link" href="@Url.Action("Create", "Supplier")"><i class="bi bi-person-plus"></i> Add Supplier</a>
        </nav>

        <!-- Main content area -->
        <main role="main" class="container">

            <div class="page-header">
                <h1>@ViewData["Title"]</h1>
                <!-- You can add breadcrumb here if needed -->
            </div>

            @RenderBody()
        </main>

    </div>

    <footer class="footer">
        <div class="container">
            <small>&copy; 2025 Inventory System. All rights reserved.</small>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>

</html>
