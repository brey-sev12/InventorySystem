@model InventorySystem.ViewModels.ProductFormViewModel

<h2>Edit Product</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="ProductID" />

    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label"></label>
        <input asp-for="ProductCode" class="form-control" />
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SupplierID" class="form-label"></label>
        <select asp-for="SupplierID" class="form-control" asp-items="Model.Suppliers">
            <option value="">-- Select Supplier --</option>
        </select>
        <span asp-validation-for="SupplierID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
