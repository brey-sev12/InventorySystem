@model InventorySystem.ViewModels.ProductFormViewModel


<h2 class="mb-4 text-primary fw-bold">Add New Product</h2>

<form asp-action="Create" method="post" class="mt-3">

    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label">Product Code</label>
        <input asp-for="ProductCode" class="form-control" />
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity per box</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SupplierID" class="form-label">Select Supplier</label>
        <select asp-for="SupplierID" class="form-select" asp-items="Model.Suppliers">
            <option value="">-- Select Supplier --</option>
        </select>
        <span asp-validation-for="SupplierID" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-start">
        <button type="submit" class="btn btn-success me-2">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
